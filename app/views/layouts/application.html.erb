<!DOCTYPE html>
<html>
  <head>
    <title>BookStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/books" class="brand-logo">Rails books</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li> <%= current_user ? "ようこそ #{current_user.name} さん" : "" %>  </li>
          <li>
          <% if current_user %>
            <%= link_to "カート表示(#{current_user.cart_count})", carts_path %>
          <% end %>
          </li>
          <li>
            <% if current_user %>
              <%= link_to 'ログアウト', logout_path %>
            <% else %>
              <%= link_to 'ログイン', login_path %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
     <%= yield %>
    </div>
  </body>
</html>
